{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "eu_dpp_textile.json",
  "title": "EU DPP Textile",
  "type": "object",
  "properties": {
    "fiberComposition": { "type": "string" },
    "countryOfOrigin": { "type": "string", "minLength": 2 },
    "recyclability": { "type": "string", "enum": ["high", "medium", "low"] },
    "careInstructions": { "type": "string" }
  },
  "required": ["fiberComposition", "countryOfOrigin", "recyclability"],
  "additionalProperties": false
}
