{
  "$id": "https://trustup.local/schemas/gs1_electronics.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GS1 â€” Elettronica",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "gtin": {
      "type": "string",
      "description": "GTIN-8/12/13/14",
      "pattern": "^(?=\\d{8}$|\\d{12}$|\\d{13}$|\\d{14}$)\\d+$"
    },
    "brand": { "type": "string" },
    "model": { "type": "string" },
    "dimensions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "length": { "type": "number", "minimum": 0 },
        "width":  { "type": "number", "minimum": 0 },
        "height": { "type": "number", "minimum": 0 },
        "unitCode": {
          "type": "string",
          "description": "UNECE unit code (es. MMT, CMT, MTR)",
          "pattern": "^[A-Z]{3}$"
        }
      },
      "required": ["length", "width", "height", "unitCode"]
    },
    "countryOfOrigin": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2",
      "pattern": "^[A-Z]{2}$"
    }
  },
  "required": ["gtin", "brand", "model"]
}
